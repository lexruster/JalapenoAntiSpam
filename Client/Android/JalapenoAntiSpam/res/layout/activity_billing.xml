<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BaseLayout"
    android:weightSum="1.0"
    tools:context=".BillingActivity" >

    <TextView
        android:id="@+id/textView"
        style="@style/BaseControl"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center_horizontal"
        android:text="@string/BillingBuyText"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:typeface="normal" />
    
    <TextView
            android:id="@+id/textPriceInfo"
            style="@style/BaseControl.Text"
            android:layout_marginBottom="20dp"
            android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal" >
      
         <ImageButton
             android:id="@+id/buttonPurchase"
             style="@style/JalapenoImageButton"
             android:onClick="Buy"
             android:src="@drawable/ico_check" 
             android:layout_gravity="center_horizontal"/>

    </LinearLayout>

    <Button
        android:id="@+id/buttonDebugPurchase"
        style="@style/BaseControl.Button.Debug"
        android:onClick="BuyTest"
        android:text="@string/TestBuyText"
        android:visibility="invisible" />

</LinearLayout>