<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/ListItem"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvSenderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="15sp" >
        </TextView>

        <CheckBox
            android:id="@+id/cbIsSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:layout_weight="0"
            android:gravity="center"
            android:text="@string/isspamer"
            android:textSize="13sp" >
        </CheckBox>

          <ImageButton
            android:id="@+id/imgViewSpammerSms"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            
            
            android:layout_gravity="right"
            android:scaleType="fitXY"
            android:src="@drawable/ico_sms"
            android:padding="5dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/SpammersSmses" 
            
            android:background="@drawable/state_background"
            />
          
        <!--Button
            android:id="@+id/btnViewSpammerSms"
            style="@style/BaseText.BaseControl.ButtonSms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="0dp"
            android:layout_weight="0"
            android:padding="2dp"
            android:text="@string/SpammersSmses"
            android:textSize="13sp" >
        </Button-->
    </LinearLayout>

</LinearLayout>