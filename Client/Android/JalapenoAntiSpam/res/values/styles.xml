<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="BaseText">
        <item name="android:typeface">sans</item>
    </style>

    <style name="BaseText.BaseControl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BaseLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="BaseText.BaseControl.Button">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="BaseText.BaseControl.Button.Toogle"></style>

    <style name="BaseText.BaseControl.ButtonSms">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">17sp</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="BaseText.BaseControl.Button.Debug">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">#FF0000</item>
        <item name="android:typeface">normal</item>
        <item name="android:text">@string/DebugActivity</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="BaseText.BaseControl.TextHeader">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:typeface">normal</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="BaseText.BaseControl.Text">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="BaseText.JalapenoImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/state_background</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="BaseText.BaseControl.ListView">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="ListItem"></style>

    <style name="BaseText.BaseControl.ListGroup">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>