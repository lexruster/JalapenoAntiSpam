<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseControl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="BaseLayout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#000000</item>
    </style>

    <style name="BaseControl.Button">
    </style>

    <style name="BaseControl.Button.Debug">
        <item name="android:textColor">@android:color/holo_red_dark</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="BaseControl.TextHeader">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:typeface">normal</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="BaseControl.ListView">
        
    </style>
    <style name="BaseControl.ListItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>


    <style name="BaseControl.ListGroup">
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
